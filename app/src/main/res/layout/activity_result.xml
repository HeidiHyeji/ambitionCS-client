<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:scrollbarAlwaysDrawVerticalTrack="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <ImageButton
            android:id="@+id/home"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/back_selector" /><!--뒤로가기버튼-->
        <TextView
            android:layout_width="130dp"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="장비 현황"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="24sp" /><!--타이틀-->
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="13"><!--본문-->

        <LinearLayout
            android:id="@+id/result_frame"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#33ffffff"
            android:elevation="1dp"
            android:orientation="vertical"
            android:padding="20dp"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.9"
                android:orientation="vertical"
                android:layout_marginBottom="15dp">
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:stretchColumns="*"
                    android:background="#AAD0BFAF"
                    >
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:background="#FFFFFF"
                            android:gravity="center"
                            android:padding="3dp"
                            android:layout_width="8dp"></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:layout_marginLeft="1dp"
                            android:background="#FFFFFF"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="종류" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:layout_marginLeft="1dp"
                            android:background="#FFFFFF"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="장비이름" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:layout_marginLeft="1dp"
                            android:background="#FFFFFF"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="상태"
                             />


                    </TableRow>

                </TableLayout>
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:stretchColumns="*"
                            android:background="#FFD0BFAF"
                            android:id="@+id/result_table"></TableLayout>
                </ScrollView>
            </LinearLayout>

            <Button
                android:id="@+id/request_button"
                android:layout_width="fill_parent"
                android:layout_weight="0.1"
                android:layout_height="0dp"
                android:background="@drawable/button_selector"
                android:text="신청"
                android:textAllCaps="false"
                android:textColor="@color/text_selector"
                android:textSize="18sp"
                android:elevation="1dp" />
        </LinearLayout>
    </RelativeLayout><!--본문 끝-->

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"

        android:layout_centerHorizontal="false"
        android:layout_centerInParent="false"
        android:layout_weight="1"
        android:textSize="68dp" />
</LinearLayout>